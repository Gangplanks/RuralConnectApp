<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gangplank.ruralconnect.fragment.AboutFragment">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone"
        android:id="@+id/textView3"
        android:layout_gravity="center_vertical|left|right"
        android:layout_marginLeft="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="04039411020"
        android:layout_gravity="center"
        android:phoneNumber="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rural Connect is a bridge connecting common man with the Government. It aids in screening out Government welfare schemes that every individual is entitled to based on his/her occupation, age, income and community. It also acts as a forum to hold community level discussions."
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="30dp"
        android:textAlignment="gravity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9825"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="200dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIN"
        android:id="@+id/textView6"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Call us @"
        android:id="@+id/textView7"
        android:layout_gravity="center|left"
        android:layout_marginBottom="80dp"
        android:textStyle="bold" />


</FrameLayout>
